#!/bin/bash

function powermenu {
    options="Shutdown\nReboot"
    selected=$(echo -e $options | dmenu -i -l 20 -p 'Choose an option:' -fn 'JetBrainsMono Nerd Font:style:medium:size=10' -sb "#51547d" -nb "#1c1b22")
    if [[ $selected = Shutdown ]]; then
        systemctl poweroff
    elif [[ $selected = Reboot ]]; then
        systemctl reboot  
    fi
  }

powermenu
